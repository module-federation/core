{
  "name": "node-host",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/node-host/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/apps/node-host/dist"],
      "defaultConfiguration": "production",
      "options": {
        "command": "NODE_OPTIONS=--max_old_space_size=4096 pnpm exec webpack-cli --config apps/node-host/webpack.config.js --output-path apps/node-host/dist --mode production",
        "forwardAllArgs": false
      },
      "configurations": {
        "development": {
          "command": "NODE_OPTIONS=--max_old_space_size=4096 pnpm exec webpack-cli --config apps/node-host/webpack.config.js --output-path apps/node-host/dist --mode development"
        },
        "production": {
          "command": "NODE_OPTIONS=--max_old_space_size=4096 pnpm exec webpack-cli --config apps/node-host/webpack.config.js --output-path apps/node-host/dist --mode production"
        }
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        }
      ]
    },
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        }
      ],
      "options": {
        "commands": [
          {
            "command": "nx run node-host:build:development",
            "forwardAllArgs": false
          },
          {
            "command": "node apps/node-host/dist/main.js",
            "forwardAllArgs": false
          }
        ],
        "parallel": false
      },
      "configurations": {
        "development": {
          "commands": [
            {
              "command": "nx run node-host:build:development",
              "forwardAllArgs": false
            },
            {
              "command": "node apps/node-host/dist/main.js",
              "forwardAllArgs": false
            }
          ]
        },
        "production": {
          "commands": [
            {
              "command": "nx run node-host:build:production",
              "forwardAllArgs": false
            },
            {
              "command": "node apps/node-host/dist/main.js",
              "forwardAllArgs": false
            }
          ]
        }
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec eslint apps/node-host/**/*.ts",
        "forwardAllArgs": false
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec jest --config apps/node-host/jest.config.ts --passWithNoTests",
        "forwardAllArgs": false
      },
      "configurations": {
        "ci": {
          "command": "pnpm exec jest --config apps/node-host/jest.config.ts --passWithNoTests --ci --coverage"
        }
      }
    }
  }
}
