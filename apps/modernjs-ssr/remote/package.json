{
  "name": "modernjs-ssr-remote",
  "private": true,
  "version": "0.1.36",
  "scripts": {
    "reset": "npx rimraf ./**/node_modules",
    "dev": "modern dev",
    "build": "cd apps/modernjs-ssr/remote ; pnpm run build",
    "start": "modern start",
    "serve": "cd apps/modernjs-ssr/remote ; pnpm run dev",
    "new": "modern new",
    "lint": "modern lint",
    "upgrade": "modern upgrade",
    "e2e": "pnpm exec cypress run --project apps/modernjs-ssr/remote --e2e --config baseUrl=http://localhost:4001 --browser chrome",
    "e2e:development": "pnpm exec cypress open --project apps/modernjs-ssr/remote --e2e --config baseUrl=http://localhost:4001 --browser electron",
    "test:e2e": "pnpm exec concurrently \"lsof -i :8080 || pnpm --filter modernjs-ssr-remote run serve & echo 'done'\" \"sleep 20 && pnpm --filter modernjs-ssr-remote run e2e\""
  },
  "engines": {
    "node": ">=16.18.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ],
  "dependencies": {
    "@babel/runtime": "7.28.2",
    "@modern-js/runtime": "3.0.1",
    "@module-federation/modern-js-v3": "workspace:*",
    "antd": "4.24.15",
    "react": "~18.3.1",
    "react-dom": "~18.3.1"
  },
  "devDependencies": {
    "@modern-js-app/eslint-config": "2.59.0",
    "@modern-js/app-tools": "3.0.1",
    "@modern-js/eslint-config": "2.59.0",
    "@modern-js/tsconfig": "3.0.1",
    "@types/jest": "~29.5.0",
    "@types/node": "^20.19.5",
    "@types/react": "~18.2.0",
    "@types/react-dom": "~18.3.0",
    "lint-staged": "~13.1.0",
    "prettier": "~3.3.3",
    "rimraf": "~6.0.1",
    "typescript": "~5.0.4"
  }
}
