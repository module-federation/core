{
  "name": "modernjs-ssr-remote",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/modernjs-ssr/remote/src",
  "projectType": "application",
  "tags": [],
  "implicitDependencies": ["typescript"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "dependsOn": [
          {
            "target": "build",
            "dependencies": true
          }
        ],
        "commands": [
          {
            "command": "cd apps/modernjs-ssr/remote; pnpm run build",
            "forwardAllArgs": true
          }
        ]
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "dependsOn": [
          {
            "target": "build",
            "dependencies": true
          }
        ],
        "commands": [
          {
            "command": "cd apps/modernjs-ssr/remote; pnpm run dev",
            "forwardAllArgs": false
          }
        ]
      }
    },
    "e2e": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec cypress run --config-file apps/modernjs-ssr/remote/cypress.config.ts --e2e --config baseUrl=http://localhost:4001 --browser chrome",
        "forwardAllArgs": false
      },
      "configurations": {
        "development": {
          "command": "pnpm exec cypress open --config-file apps/modernjs-ssr/remote/cypress.config.ts --e2e --config baseUrl=http://localhost:4001 --browser electron"
        }
      }
    },
    "test:e2e": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": true,
        "commands": [
          {
            "command": "lsof -i :8080 || nx run modernjs-ssr-remote:serve & echo 'done'",
            "forwardAllArgs": false
          },
          {
            "command": "sleep 20 && nx run modernjs-ssr-remote:e2e",
            "forwardAllArgs": true
          }
        ]
      }
    }
  }
}
