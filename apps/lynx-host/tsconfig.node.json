{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,

    // Rspeedy uses Node.js's module resolution
    "module": "node16",
    "moduleResolution": "node16",
    "erasableSyntaxOnly": true,

    // Node.js 18+
    "lib": ["es2023"],
    "target": "es2022",

    "noEmit": true,
  },
  "include": [
    "./lynx.config.ts",
    "./vitest.config.ts",
  ],
}
