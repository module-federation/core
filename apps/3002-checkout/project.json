{
  "name": "3002-checkout",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/3002-checkout",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "cache": false,
      "defaultConfiguration": "production",
      "options": {
        "command": "npx next build",
        "cwd": "apps/3002-checkout"
      },
      "configurations": {
        "development": {},
        "production": {}
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        }
      ]
    },
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "command": "npx next dev -p 3002",
        "cwd": "apps/3002-checkout"
      },
      "configurations": {
        "development": {
          "command": "npx next dev -p 3002"
        },
        "production": {
          "command": "npx next start -p 3002"
        }
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec eslint apps/3002-checkout/**/*.{ts,tsx,js,jsx}",
        "forwardAllArgs": false
      }
    },
    "e2e": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec cypress run --config-file apps/3002-checkout/cypress.config.ts --e2e --config baseUrl=http://localhost:3002",
        "forwardAllArgs": false
      }
    },
    "test:e2e": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/run-next-e2e.mjs --mode=dev"
      },
      "configurations": {
        "production": {
          "command": "node tools/scripts/run-next-e2e.mjs --mode=prod"
        }
      }
    }
  }
}
