{
  "name": "reactStorybook",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/reactStorybook/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["apps/reactStorybook/dist"],
      "defaultConfiguration": "production",
      "options": {
        "command": "NODE_OPTIONS=--max_old_space_size=4096 pnpm exec webpack-cli --config apps/reactStorybook/webpack.config.prod.js --mode production",
        "forwardAllArgs": false
      },
      "configurations": {
        "development": {
          "command": "NODE_OPTIONS=--max_old_space_size=4096 pnpm exec webpack-cli --config apps/reactStorybook/webpack.config.js --mode development"
        },
        "production": {
          "command": "NODE_OPTIONS=--max_old_space_size=4096 pnpm exec webpack-cli --config apps/reactStorybook/webpack.config.prod.js --mode production"
        }
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        }
      ]
    },
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "command": "NODE_OPTIONS=--max_old_space_size=4096 pnpm exec webpack-cli serve --config apps/reactStorybook/webpack.config.js --mode development --port 4200",
        "forwardAllArgs": false
      },
      "configurations": {
        "development": {
          "command": "NODE_OPTIONS=--max_old_space_size=4096 pnpm exec webpack-cli serve --config apps/reactStorybook/webpack.config.js --mode development --port 4200"
        },
        "production": {
          "command": "NODE_OPTIONS=--max_old_space_size=4096 pnpm exec webpack-cli serve --config apps/reactStorybook/webpack.config.prod.js --mode production --port 4200 --no-hot"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/reactStorybook/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/reactStorybook/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "serve-static": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "pnpm exec serve apps/reactStorybook/dist -l 4200 --cors",
        "forwardAllArgs": false
      }
    },
    "storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec storybook dev -p 4400 -c apps/reactStorybook/.storybook",
        "forwardAllArgs": false
      },
      "configurations": {
        "ci": {
          "command": "pnpm exec storybook dev -p 4400 -c apps/reactStorybook/.storybook --quiet"
        }
      }
    },
    "build-storybook": {
      "executor": "nx:run-commands",
      "outputs": ["storybook/reactStorybook/dist"],
      "options": {
        "command": "pnpm exec storybook build -c apps/reactStorybook/.storybook -o storybook/reactStorybook/dist",
        "forwardAllArgs": false
      },
      "configurations": {
        "ci": {
          "command": "pnpm exec storybook build -c apps/reactStorybook/.storybook -o storybook/reactStorybook/dist --quiet"
        }
      }
    }
  }
}
