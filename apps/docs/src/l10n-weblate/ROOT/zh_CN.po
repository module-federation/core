"      method: \"POST\",\n"
"      headers: {\n"
"        Authorization: token,\n"
"        \"Content-Type\": \"application/x-www-form-urlencoded\",\n"
"      },\n"
"      body: `amount=${amount}&currency=usd`,\n"
"    });\n"
"    const data = await response.json();\n"
"    // Update the state with the payment intent data\n"
