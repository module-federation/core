"  \"dependencies\": {\n"
"    \"react\": \"^16.13.1\",\n"
"    \"react-dom\": \"^16.13.1\"\n"
"  },\n"
"  \"devDependencies\": {\n"
"    \"@babel/core\": \"^7.8.6\",\n"
