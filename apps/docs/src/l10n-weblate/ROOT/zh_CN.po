#: src/en/modules/ROOT/pages/team-collaboration-review.adoc:17
#, no-wrap
msgid ""
"{\n"
"  \"parserOptions\": {\n"
"    \"sourceType\": \"module\",\n"
"    \"ecmaVersion\": 2020\n"
"  },\n"
"  \"plugins\": [\"@module-federation/eslint-plugin\"]\n"
"}\n"
