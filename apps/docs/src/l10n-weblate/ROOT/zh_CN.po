"  module: {\n"
"    rules: [\n"
"      {\n"
"        test: /\\.jsx?$/,\n"
"        loader: require.resolve('babel-loader'),\n"
"        options: {\n"
"          presets: [require.resolve('@babel/preset-react')],\n"
"        },\n"
"      },\n"
"    ],\n"
"  },\n"
