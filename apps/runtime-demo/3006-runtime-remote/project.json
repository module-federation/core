{
  "name": "3006-runtime-remote",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/runtime-demo/3006-runtime-remote/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "defaultConfiguration": "production",
      "options": {
        "command": "pnpm run build",
        "cwd": "apps/runtime-demo/3006-runtime-remote"
      },
      "configurations": {
        "development": {
          "command": "pnpm run build:development",
          "cwd": "apps/runtime-demo/3006-runtime-remote"
        },
        "production": {
          "command": "pnpm run build",
          "cwd": "apps/runtime-demo/3006-runtime-remote"
        }
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        }
      ]
    },
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "production",
      "options": {
        "command": "pnpm run serve:production",
        "cwd": "apps/runtime-demo/3006-runtime-remote"
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        }
      ],
      "configurations": {
        "development": {
          "command": "pnpm run serve",
          "cwd": "apps/runtime-demo/3006-runtime-remote"
        },
        "production": {
          "command": "pnpm run serve:production",
          "cwd": "apps/runtime-demo/3006-runtime-remote"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/node-remote/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/node-remote/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  }
}
