{
  "name": "3005-runtime-host",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/runtime-demo/3005-runtime-host/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["apps/runtime-demo/3005-runtime-host/dist"],
      "defaultConfiguration": "production",
      "options": {
        "command": "NODE_OPTIONS=--max_old_space_size=4096 pnpm exec webpack-cli --config apps/runtime-demo/3005-runtime-host/webpack.config.js --mode production",
        "forwardAllArgs": false
      },
      "configurations": {
        "development": {
          "command": "NODE_OPTIONS=--max_old_space_size=4096 pnpm exec webpack-cli --config apps/runtime-demo/3005-runtime-host/webpack.config.js --mode development"
        },
        "production": {
          "command": "NODE_OPTIONS=--max_old_space_size=4096 pnpm exec webpack-cli --config apps/runtime-demo/3005-runtime-host/webpack.config.js --mode production"
        }
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        }
      ]
    },
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "production",
      "options": {
        "command": "NODE_OPTIONS=--max_old_space_size=4096 pnpm exec webpack-cli serve --config apps/runtime-demo/3005-runtime-host/webpack.config.js --mode production --port 3005 --no-hot",
        "forwardAllArgs": false
      },
      "configurations": {
        "development": {
          "command": "NODE_OPTIONS=--max_old_space_size=4096 pnpm exec webpack-cli serve --config apps/runtime-demo/3005-runtime-host/webpack.config.js --mode development --port 3005"
        },
        "production": {
          "command": "NODE_OPTIONS=--max_old_space_size=4096 pnpm exec webpack-cli serve --config apps/runtime-demo/3005-runtime-host/webpack.config.js --mode production --port 3005 --no-hot"
        }
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        }
      ]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/runtime-demo/host/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "serve-static": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "pnpm exec serve apps/runtime-demo/3005-runtime-host/dist -l 3005 --cors",
        "forwardAllArgs": false
      }
    },
    "e2e": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "apps/runtime-demo/3005-runtime-host/cypress.config.ts",
        "testingType": "e2e",
        "baseUrl": "http://127.0.0.1:3005",
        "browser": "chrome"
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        }
      ],
      "configurations": {
        "development": {
          "runnerUi": true,
          "browser": "electron",
          "exit": false,
          "watch": true
        }
      }
    },
    "test:e2e": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": true,
        "commands": [
          {
            "command": "lsof -i :3005 || nx run 3005-runtime-host:serve:development",
            "forwardAllArgs": false
          },
          {
            "command": "npx wait-on --timeout 180000 tcp:3005 http-get://127.0.0.1:3005/ && nx run 3005-runtime-host:e2e",
            "forwardAllArgs": true
          }
        ]
      }
    }
  }
}
