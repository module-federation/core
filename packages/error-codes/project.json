{
  "name": "error-codes",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/error-codes/src",
  "projectType": "library",
  "tags": ["type:pkg"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/packages/error-codes/dist"],
      "options": {
        "parallel": false,
        "cwd": "packages/error-codes",
        "commands": [
          "tsup --config ./tsup.config.ts",
          "sleep 1",
          "cp package.json ./dist",
          "cp *.md ./dist"
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/error-codes/**/*.ts",
          "packages/error-codes/package.json"
        ]
      }
    },
    "pre-release": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx run error-codes:test",
            "forwardAllArgs": false
          },
          {
            "command": "nx run error-codes:build",
            "forwardAllArgs": false
          }
        ]
      }
    }
  }
}
