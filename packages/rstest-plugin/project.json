{
  "name": "rstest-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/rstest-plugin/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/packages/rstest-plugin/dist"],
      "options": {
        "command": "rslib build",
        "cwd": "packages/rstest-plugin"
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        }
      ]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/rstest-plugin/**/*.ts",
          "packages/rstest-plugin/package.json"
        ]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/packages/rstest-plugin"],
      "options": {
        "command": "rstest run -c packages/rstest-plugin/rstest.config.ts",
        "forwardAllArgs": false
      }
    },
    "pre-release": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx run rstest-plugin:test",
            "forwardAllArgs": false
          },
          {
            "command": "nx run rstest-plugin:build",
            "forwardAllArgs": false
          }
        ]
      }
    }
  },
  "tags": ["type:pkg"]
}
