{
  "name": "nextjs-mf",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/nextjs-mf/src",
  "projectType": "library",
  "tags": ["type:pkg"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/packages/nextjs-mf/dist"],
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        }
      ],
      "options": {
        "parallel": false,
        "cwd": "packages/nextjs-mf",
        "commands": [
          {
            "command": "tsdown --config tsdown.config.mts",
            "forwardAllArgs": false
          }
        ]
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputFile}"],
      "options": {
        "command": "pnpm exec eslint \"packages/nextjs-mf/**/*.js\" \"packages/nextjs-mf/**/*.ts\"",
        "forwardAllArgs": false
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/packages/nextjs-mf"],
      "options": {
        "command": "pnpm exec jest --config packages/nextjs-mf/jest.config.js --passWithNoTests",
        "forwardAllArgs": false
      }
    },
    "pre-release": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx run nextjs-mf:test",
            "forwardAllArgs": false
          },
          {
            "command": "nx run nextjs-mf:build",
            "forwardAllArgs": false
          },
          {
            "command": "rm -f ./packages/nextjs-mf/dist/package.json",
            "forwardAllArgs": false
          }
        ]
      }
    }
  }
}
