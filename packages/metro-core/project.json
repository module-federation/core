{
  "name": "metro-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/metro-core/src",
  "projectType": "library",
  "tags": ["type:metro"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/metro-core",
        "commands": ["pnpm build"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/metro-core/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/metro-core"],
      "options": {
        "jestConfig": "packages/metro-core/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
