{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "declaration": true,
    "types": ["node"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.test.js",
    "dist/**"
  ]
}
