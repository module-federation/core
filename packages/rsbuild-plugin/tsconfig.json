{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": false,
    "module": "es2022",
    "target": "es2022",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "types": ["jest", "node"],
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules/**/*", "../node_modules"]
}
