{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": false,
    "module": "es2022",
    "target": "es2022",
    "allowJs": false,
    "strict": true,
    "types": ["jest", "node"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "declaration": true,
    "paths": {
      "@/*": ["./*"],
      "@src/*": ["./src/*"]
    }
  },
  "include": ["src", "../../global.d.ts", "__tests__/**/*"],
  "exclude": ["node_modules/**/*", "../node_modules"]
}
