{
  "name": "dts-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/dts-plugin/src",
  "projectType": "library",
  "tags": ["type:pkg"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/packages/dts-plugin/dist"],
      "options": {
        "parallel": false,
        "cwd": "packages/dts-plugin",
        "commands": [
          "tsdown --config ./tsdown.config.ts",
          "sleep 1",
          "cp package.json ./dist",
          "cp *.md ./dist"
        ]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/packages/dts-plugin"],
      "options": {
        "parallel": false,
        "cwd": "packages/dts-plugin",
        "commands": [
          "node -e \"require('fs').rmSync('dist-test',{recursive:true,force:true,maxRetries:20,retryDelay:50})\"",
          "nx run dts-plugin:test-impl"
        ]
      }
    },
    "test-impl": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/packages/dts-plugin"],
      "options": {
        "command": "pnpm exec vitest run --passWithNoTests --config packages/dts-plugin/vite.config.mts",
        "forwardAllArgs": false
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputFile}"],
      "options": {
        "command": "pnpm exec eslint \"packages/dts-plugin/**/*.ts\" \"packages/dts-plugin/package.json\"",
        "forwardAllArgs": false
      }
    },
    "build-debug": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "FEDERATION_DEBUG=true nx run dts-plugin:build",
            "forwardAllArgs": false
          }
        ]
      }
    },
    "pre-release": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx run dts-plugin:test",
            "forwardAllArgs": false
          },
          {
            "command": "nx run dts-plugin:build",
            "forwardAllArgs": false
          }
        ]
      }
    }
  }
}
