{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": false,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "declaration": true,
    "allowJs": true,
    "lib": ["ES2021", "DOM"],
    "types": ["node", "fs-extra"]
  },
  "include": ["src", "__tests__"]
}
