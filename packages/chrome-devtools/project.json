{
  "name": "chrome-devtools",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/chrome-devtools/src",
  "projectType": "library",
  "tags": ["type:pkg"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm -C packages/chrome-devtools build:lib"]
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": ["runtime", "sdk"]
        },
        {
          "target": "build",
          "dependencies": true
        }
      ]
    },
    "build:chrome-plugins": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm -C packages/chrome-devtools build"]
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": ["runtime", "sdk"]
        },
        {
          "target": "build",
          "dependencies": true
        }
      ]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm -C packages/chrome-devtools test"]
      }
    },
    "e2e:devtools": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm -C packages/chrome-devtools test:e2e"]
      }
    },
    "e2e:devtools:ui": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm -C packages/chrome-devtools test:e2e:ui"]
      }
    }
  }
}
