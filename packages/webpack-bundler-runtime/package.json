{
  "public": true,
  "name": "@module-federation/webpack-bundler-runtime",
  "version": "2.0.1",
  "type": "module",
  "license": "MIT",
  "description": "Module Federation Runtime for webpack",
  "keywords": [
    "Module Federation",
    "bundler runtime"
  ],
  "files": [
    "dist/",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/module-federation/core.git",
    "directory": "packages/webpack-bundler-runtime"
  },
  "author": "zhanghang <hanric.zhang@gmail.com>",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@module-federation/runtime": "workspace:*",
    "@module-federation/sdk": "workspace:*"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./constant": {
      "import": {
        "types": "./dist/constant.d.ts",
        "default": "./dist/constant.js"
      },
      "require": {
        "types": "./dist/constant.d.ts",
        "default": "./dist/constant.cjs"
      }
    },
    "./*": "./*"
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/index.d.ts"
      ],
      "constant": [
        "./dist/constant.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsdown --config tsdown.config.ts --filter webpack-bundler-runtime-build",
    "lint": "pnpm exec eslint \"packages/webpack-bundler-runtime/**/*.ts\" \"packages/webpack-bundler-runtime/package.json\"",
    "test": "pnpm exec jest --config packages/webpack-bundler-runtime/jest.config.cjs --passWithNoTests",
    "test:ci": "pnpm exec jest --config packages/webpack-bundler-runtime/jest.config.cjs --passWithNoTests --ci --coverage",
    "pre-release": "pnpm --filter @module-federation/webpack-bundler-runtime run test && pnpm --filter @module-federation/webpack-bundler-runtime run build"
  }
}
