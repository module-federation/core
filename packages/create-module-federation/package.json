{
  "name": "create-module-federation",
  "description": "Create a new Module Federation project",
  "public": true,
  "sideEffects": false,
  "version": "2.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/module-federation/core.git",
    "directory": "packages/create-module-federation"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "scripts": {
    "build": "cd packages/create-module-federation ; pnpm run build && cp packages/create-module-federation/LICENSE packages/create-module-federation/dist",
    "lint": "pnpm exec eslint \"packages/create-module-federation/**/*.ts\" \"packages/create-module-federation/package.json\"",
    "test": "node packages/create-module-federation/scripts/verify-rslib-templates.mjs",
    "pre-release": "pnpm --filter create-module-federation run test && pnpm --filter create-module-federation run build"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=16.7.0"
  },
  "bin": {
    "create-module-federation": "./dist/index.js"
  },
  "files": [
    "templates",
    "dist"
  ],
  "dependencies": {
    "@clack/prompts": "^0.8.2",
    "execa": "5.1.1",
    "fs-extra": "9.1.0",
    "minimist": "^1.2.8",
    "rslog": "^1.2.3",
    "glob": "7.2.0",
    "handlebars": "4.7.7"
  },
  "devDependencies": {
    "@types/glob": "7.2.0",
    "@types/minimist": "^1.2.5",
    "@types/fs-extra": "9.0.13",
    "@rslib/core": "^0.9.0",
    "rsbuild-plugin-publint": "^0.2.1"
  }
}
