{
  "name": "metro-plugin-rnc-cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/metro-plugin-rnc-cli/",
  "projectType": "library",
  "tags": ["type:pkg"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "echo 'No build needed for metro-plugin-rnc-cli - pure JavaScript package'",
            "forwardAllArgs": false
          }
        ]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "command": "pnpm exec jest --config packages/metro-plugin-rnc-cli/jest.config.ts --passWithNoTests --watchman=false",
        "forwardAllArgs": false
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec eslint \"packages/metro-plugin-rnc-cli/**/*.{js,ts}\"",
        "forwardAllArgs": false
      }
    }
  }
}
