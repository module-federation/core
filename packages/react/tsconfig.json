{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": false,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {},
    "noImplicitAny": false
  },
  "include": ["src"]
}
