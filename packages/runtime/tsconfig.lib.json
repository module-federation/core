{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": false,
    "skipLibCheck": true,
    "declarationMap": false,
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "global.d.ts"],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "node_modules/**/*"
  ]
}
