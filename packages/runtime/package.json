{
  "name": "@module-federation/runtime",
  "version": "2.0.1",
  "type": "module",
  "author": "zhouxiao <codingzx@gmail.com>",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "browser": {
    "url": false
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/module-federation/core.git",
    "directory": "packages/runtime"
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./helpers": {
      "import": {
        "types": "./dist/helpers.d.ts",
        "default": "./dist/helpers.js"
      },
      "require": {
        "types": "./dist/helpers.d.ts",
        "default": "./dist/helpers.cjs"
      }
    },
    "./types": {
      "import": {
        "types": "./dist/types.d.ts",
        "default": "./dist/types.js"
      },
      "require": {
        "types": "./dist/types.d.ts",
        "default": "./dist/types.cjs"
      }
    },
    "./core": {
      "import": {
        "types": "./dist/core.d.ts",
        "default": "./dist/core.js"
      },
      "require": {
        "types": "./dist/core.d.ts",
        "default": "./dist/core.cjs"
      }
    },
    "./*": "./*"
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/index.d.ts"
      ],
      "helpers": [
        "./dist/helpers.d.ts"
      ],
      "types": [
        "./dist/types.d.ts"
      ],
      "core": [
        "./dist/core.d.ts"
      ]
    }
  },
  "dependencies": {
    "@module-federation/sdk": "workspace:*",
    "@module-federation/error-codes": "workspace:*",
    "@module-federation/runtime-core": "workspace:*"
  },
  "scripts": {
    "build": "tsdown --config tsdown.config.ts",
    "lint": "pnpm exec eslint \"packages/runtime/**/*.ts\" \"packages/runtime/package.json\"",
    "build-debug": "RUNTIME_TSDOWN_MODE=debug tsdown --config tsdown.config.ts",
    "pre-release": "pnpm --filter @module-federation/runtime run test && pnpm --filter @module-federation/runtime run build",
    "test": "vitest run -u -c packages/runtime/vitest.config.ts"
  }
}
