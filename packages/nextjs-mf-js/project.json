{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/nextjs-mf-js/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/nextjs-mf-js",
        "main": "packages/nextjs-mf-js/src/index.js",
        "tsConfig": "packages/nextjs-mf-js/tsconfig.lib.json",
        "assets": ["packages/nextjs-mf-js/*.md"]
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs nextjs-mf-js {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/nextjs-mf-js/**/*.js"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/nextjs-mf-js"],
      "options": {
        "jestConfig": "packages/nextjs-mf-js/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
