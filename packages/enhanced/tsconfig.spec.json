{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["jest", "node"],
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "webpack": ["../../webpack/types.d.ts"],
      "webpack/*": ["../../webpack/lib/*.d.ts", "../../webpack/*"]
    }
  },
  "include": [
    "jest.config.ts",
    "test/**/*.test.ts",
    "test/**/*.spec.ts",
    "test/**/*.d.ts",
    "src/**/*.d.ts"
  ]
}
