{
  "name": "enhanced",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/enhanced/src",
  "projectType": "library",
  "tags": ["type:pkg"],
  "targets": {
    "generate:schema": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node src/scripts/compile-schema.js",
        "cwd": "packages/enhanced"
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{workspaceRoot}/packages/enhanced/dist"],
      "options": {
        "outputPath": "packages/enhanced/dist",
        "main": "packages/enhanced/src/index.ts",
        "tsConfig": "packages/enhanced/tsconfig.lib.json",
        "assets": [
          "packages/enhanced/*.md",
          {
            "glob": "src/**/*.d.ts",
            "input": "packages/enhanced",
            "ignore": [],
            "output": ""
          }
        ]
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        }
      ]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/enhanced/**/*.ts"]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "NODE_OPTIONS=--experimental-vm-modules --expose-gc --max-old-space-size=24576 npx rstest -c packages/enhanced/rstest.config.ts",
            "forwardAllArgs": true
          }
        ]
      }
    },
    "pre-release": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx run enhanced:test",
            "forwardAllArgs": false
          },
          {
            "command": "nx run enhanced:build",
            "forwardAllArgs": false
          }
        ]
      }
    }
  }
}
