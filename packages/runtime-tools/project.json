{
  "name": "runtime-tools",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/runtime-tools/src",
  "projectType": "library",
  "tags": ["type:pkg"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/packages/runtime-tools/dist"],
      "options": {
        "parallel": false,
        "cwd": "packages/runtime-tools",
        "commands": [
          {
            "command": "tsdown --config tsdown.config.ts",
            "forwardAllArgs": false
          }
        ]
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        }
      ]
    },
    "lint": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputFile}"],
      "options": {
        "command": "pnpm exec eslint \"packages/runtime-tools/**/*.ts\" \"packages/runtime-tools/package.json\"",
        "forwardAllArgs": false
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/packages/core"],
      "options": {
        "command": "pnpm exec jest --config packages/runtime-tools/jest.config.cjs --passWithNoTests",
        "forwardAllArgs": false
      }
    }
  }
}
