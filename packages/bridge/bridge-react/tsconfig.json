{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declarationDir": "./dist/types",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "es2015",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "strict": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/remoteApp.tsx",
    "src/create.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
