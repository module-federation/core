{
  "name": "sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/sdk/src",
  "projectType": "library",
  "tags": ["type:pkg"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/packages/sdk/dist"],
      "options": {
        "parallel": false,
        "cwd": "packages/sdk",
        "commands": [
          {
            "command": "tsdown --config tsdown.config.ts",
            "forwardAllArgs": false
          }
        ]
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        }
      ]
    },
    "lint": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputFile}"],
      "options": {
        "command": "pnpm exec eslint \"packages/sdk/**/*.ts\" \"packages/sdk/package.json\"",
        "forwardAllArgs": false
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "command": "pnpm exec jest --config packages/sdk/jest.config.cjs --passWithNoTests",
        "forwardAllArgs": false
      },
      "configurations": {
        "ci": {
          "command": "pnpm exec jest --config packages/sdk/jest.config.cjs --passWithNoTests --ci --coverage"
        }
      }
    },
    "pre-release": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx run sdk:test",
            "forwardAllArgs": false
          },
          {
            "command": "nx run sdk:build",
            "forwardAllArgs": false
          }
        ]
      }
    }
  }
}
