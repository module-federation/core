{
  "name": "@module-federation/typescript",
  "version": "3.1.6",
  "description": "Webpack plugin to stream typescript for module federation apps/components",
  "license": "MIT",
  "type": "commonjs",
  "keywords": [
    "module-federation",
    "typescript",
    "remote types",
    "federated types"
  ],
  "files": [
    "dist/",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "Prasanna Mestha <prasanna@privjs.com> (https://github.com/prasannamestha)",
  "contributors": [
    "Zack Jackson <zackary.l.jackson@gmail.com> (https://github.com/ScriptedAlchemy)",
    "Pavan Divi <pavan.divi@outlook.com> (https://github.com/pavandv)"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/module-federation/core.git",
    "directory": "packages/typescript"
  },
  "scripts": {
    "build": "tsc -p tsconfig.lib.json",
    "lint": "ESLINT_USE_FLAT_CONFIG=false pnpm exec eslint --ignore-pattern node_modules \"**/*.ts\"",
    "test": "pnpm exec jest --config jest.config.ts --passWithNoTests",
    "test:ci": "pnpm exec jest --config jest.config.ts --passWithNoTests --ci --coverage",
    "pre-release": "pnpm --filter @module-federation/typescript run test && pnpm --filter @module-federation/typescript run build",
    "turbo:build": "pnpm run build",
    "turbo:test": "pnpm run test",
    "turbo:lint": "pnpm run lint"
  },
  "peerDependencies": {
    "typescript": "*",
    "vue-tsc": "^1.0.24",
    "webpack": "^5.75.0",
    "next": "*",
    "react": "*",
    "react-dom": "*"
  },
  "dependencies": {
    "node-fetch": "2.7.0",
    "lodash.get": "^4.4.2"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "vue-tsc": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "require": "./dist/src/index.js"
    }
  }
}
