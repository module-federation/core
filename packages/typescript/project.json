{
  "name": "typescript",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/typescript/src",
  "projectType": "library",
  "tags": ["type:pkg"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/packages/typescript/dist"],
      "options": {
        "parallel": false,
        "commands": [
          "node -e \"require('fs').rmSync('packages/typescript/dist',{recursive:true,force:true})\"",
          "pnpm exec tsc -p packages/typescript/tsconfig.lib.json --outDir packages/typescript/dist --rootDir packages/typescript --noCheck",
          "cp packages/typescript/*.md packages/typescript/dist"
        ]
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        }
      ]
    },
    "lint": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputFile}"],
      "options": {
        "command": "pnpm exec eslint \"packages/typescript/**/*.ts\"",
        "forwardAllArgs": false
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "command": "pnpm exec jest --config packages/typescript/jest.config.ts --passWithNoTests",
        "forwardAllArgs": false
      },
      "configurations": {
        "ci": {
          "command": "pnpm exec jest --config packages/typescript/jest.config.ts --passWithNoTests --ci --coverage"
        }
      }
    },
    "pre-release": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx run typescript:test",
            "forwardAllArgs": false
          },
          {
            "command": "nx run typescript:build",
            "forwardAllArgs": false
          }
        ]
      }
    }
  }
}
