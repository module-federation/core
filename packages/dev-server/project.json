{
  "name": "dev-server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/dev-server/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx run dev-server:build:lib",
            "forwardAllArgs": false
          },
          {
            "command": "nx run dev-server:build:iife",
            "forwardAllArgs": false
          },
          {
            "command": "mv packages/dev-server/dist-iife/launch-web-client.iife.js packages/dev-server/dist-iife/launch-web-client.iife.d.ts packages/dev-server/dist/",
            "forwardAllArgs": false
          },
          {
            "command": "rm -rf packages/dev-server/dist-iife",
            "forwardAllArgs": false
          }
        ]
      }
    },
    "build:lib": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{workspaceRoot}/packages/dev-server/dist"],
      "options": {
        "parallel": false,
        "outputPath": "packages/dev-server/dist",
        "main": "packages/dev-server/src/index.ts",
        "additionalEntryPoints": [
          "packages/dev-server/src/broker/startBroker.ts"
        ],
        "tsConfig": "packages/dev-server/tsconfig.lib.json",
        "assets": [],
        "project": "packages/dev-server/package.json",
        "compiler": "swc",
        "rollupConfig": "packages/dev-server/rollup.config.js",
        "format": ["cjs", "esm"],
        "external": ["@module-federation/*"],
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "updateBuildableProjectDepsInPackageJson": true
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        }
      ]
    },
    "build:iife": {
      "executor": "@nx/rollup:rollup",
      "options": {
        "parallel": false,
        "outputPath": "packages/dev-server/dist-iife",
        "main": "packages/dev-server/src/launchWebClient.ts",
        "tsConfig": "packages/dev-server/tsconfig.lib.json",
        "assets": [],
        "project": "packages/dev-server/package.json",
        "compiler": "swc",
        "rollupConfig": "packages/dev-server/rollup.iife.config.js",
        "format": ["cjs"],
        "external": ["@module-federation/*"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/dev-server/**/*.ts",
          "packages/dev-server/package.json"
        ]
      }
    },
    "build-debug": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "FEDERATION_DEBUG=true nx run dev-server:build",
            "forwardAllArgs": false
          }
        ]
      }
    },
    "pre-release": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx run dev-server:test",
            "forwardAllArgs": false
          },
          {
            "command": "nx run dev-server:build",
            "forwardAllArgs": false
          }
        ]
      }
    }
  },
  "tags": ["package"]
}
