{
  "name": "node",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/node/src",
  "projectType": "library",
  "tags": ["type:pkg"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/packages/node/dist"],
      "options": {
        "parallel": false,
        "cwd": "packages/node",
        "commands": [
          {
            "command": "tsdown --config tsdown.config.mts",
            "forwardAllArgs": false
          }
        ]
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        }
      ]
    },
    "lint": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputFile}"],
      "options": {
        "command": "pnpm exec eslint \"packages/node/**/*.js\" \"packages/node/**/*.ts\"",
        "forwardAllArgs": false
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/packages/node"],
      "options": {
        "command": "pnpm exec jest --config packages/node/jest.config.js --passWithNoTests",
        "forwardAllArgs": false
      }
    },
    "pre-release": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx run node:test",
            "forwardAllArgs": false
          },
          {
            "command": "nx run node:build",
            "forwardAllArgs": false
          },
          {
            "command": "rm -f ./packages/node/dist/package.json",
            "forwardAllArgs": false
          }
        ]
      }
    }
  }
}
